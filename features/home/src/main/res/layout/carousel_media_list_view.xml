<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppCard.CarouselMovies"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    tools:context=".view.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/carousel_arrows_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:tint="#efc84d"
            app:layout_constraintBottom_toBottomOf="@+id/carousel_title_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/carousel_title_view"
            app:srcCompat="@drawable/ic_baseline_double_arrow_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/carousel_title_view"
            style="@style/CodeFont.CarouselTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/carousel_see_all_view"
            app:layout_constraintStart_toEndOf="@+id/carousel_arrows_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/home_carousel_popular_movies" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/carousel_see_all_view"
            style="@style/CodeFont.CarouselSellAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home_carousel_see_all"
            app:layout_constraintBottom_toBottomOf="@+id/carousel_title_view"
            app:layout_constraintEnd_toStartOf="@+id/carousel_see_all_arrow_view"
            app:layout_constraintTop_toTopOf="@+id/carousel_title_view" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/carousel_see_all_arrow_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:tint="#3375b7"
            app:layout_constraintBottom_toBottomOf="@+id/carousel_title_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/carousel_title_view"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/carousel_see_all_arrow_view_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:constraint_referenced_ids="carousel_see_all_view, carousel_see_all_arrow_view"
            app:layout_constraintBottom_toBottomOf="@+id/carousel_see_all_view"
            app:layout_constraintEnd_toEndOf="@+id/carousel_see_all_arrow_view"
            app:layout_constraintStart_toStartOf="@+id/carousel_see_all_view"
            app:layout_constraintTop_toTopOf="@+id/carousel_see_all_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel_title_view"
            tools:listitem="@layout/media_list_item_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
