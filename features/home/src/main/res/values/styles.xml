<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCard.CarouselMovies" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:clickable">false</item>
        <item name="cardBackgroundColor">#fafafa</item>
    </style>

    <style name="AppCard.MovieListItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">#ffffff</item>
    </style>

    <style name="CodeFont.CarouselTitle" parent="CodeFont.Body2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CodeFont.CarouselSellAll" parent="CodeFont.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3375b7</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CodeFont.MovieTitle" parent="CodeFont.Body2" />

    <style name="CodeFont.MovieSubtitle" parent="CodeFont.Caption">
        <item name="android:textColor">#4d4d4d</item>
    </style>

</resources>
