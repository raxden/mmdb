<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppToolbar.Back" parent="Widget.MaterialComponents.Toolbar">
        <item name="navigationIcon">@drawable/ic_icon_arrow_left_white</item>
    </style>

    <style name="AppCard.MovieListItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="cardBackgroundColor">#ffffff</item>
    </style>

    <style name="CodeFont.MovieTitle" parent="CodeFont.Body2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CodeFont.MovieSubtitle" parent="CodeFont.Caption">
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>
