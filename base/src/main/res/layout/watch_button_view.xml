<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/movie_image_favorite_button"
        android:layout_width="36dp"
        android:layout_height="46dp"
        android:background="@drawable/favorite_button_bg_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movie_image_favorite_icon_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/movie_image_favorite_button"
        app:layout_constraintEnd_toEndOf="@+id/movie_image_favorite_button"
        app:layout_constraintStart_toStartOf="@+id/movie_image_favorite_button"
        app:layout_constraintTop_toTopOf="@+id/movie_image_favorite_button"
        app:srcCompat="@drawable/favorite_button_icon_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>

