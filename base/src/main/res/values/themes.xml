<resources>

    <style name="Theme.App" parent="BaseTheme">
        <item name="materialButtonStyle">@style/Button.App</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialogTheme</item>
        <item name="radioButtonStyle">@style/AppRadioButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="floatingActionButtonStyle">@style/AppFloatingActionButton</item>
        <item name="tabStyle">@style/AppTabStyle</item>
        <item name="textAppearanceHeadline1">@style/CodeFont.H1</item>
        <item name="textAppearanceHeadline2">@style/CodeFont.H2</item>
        <item name="textAppearanceHeadline3">@style/CodeFont.H3</item>
        <item name="textAppearanceHeadline4">@style/CodeFont.H4</item>
        <item name="textAppearanceHeadline5">@style/CodeFont.H5</item>
        <item name="textAppearanceHeadline6">@style/CodeFont.H6</item>
        <item name="textAppearanceSubtitle1">@style/CodeFont.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/CodeFont.Subtitle2</item>
        <item name="textAppearanceBody1">@style/CodeFont.Body1</item>
        <item name="textAppearanceBody2">@style/CodeFont.Body2</item>
        <item name="textAppearanceCaption">@style/CodeFont.Caption</item>
        <item name="textAppearanceButton">@style/CodeFont.Button</item>
        <item name="textAppearanceOverline">@style/CodeFont.Overline</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- https://material.io/develop/android/components/dialog/ -->
    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleTextStyle</item>
    </style>

    <style name="MaterialAlertDialogTitleTextStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text" />

    <!-- https://material.io/develop/android/components/material-button/ -->
    <style name="Button.App" parent="Widget.MaterialComponents.Button" />

    <!-- https://material.io/develop/android/components/text-input-layout/ -->
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/TextInputEditText</item>
        <!--        <item name="boxBackgroundColor">@color/edit_text_background_color</item>-->
    </style>

    <style name="TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense" />

    <!-- https://material.io/develop/android/components/material-card-view/ -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView" />

    <!-- https://material.io/develop/android/components/bottom-navigation-view/ -->
    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">

    </style>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar.Surface">

    </style>

    <!-- https://material.io/develop/android/components/floating-action-button/ -->
    <style name="AppFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton" />

    <style name="AppTabStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:elevation">4dp</item>
        <!--        <item name="tabTextAppearance">@style/CodeFont.Tabs</item>-->
    </style>

    <!-- https://material.io/develop/android/components/radiobutton/ -->
    <style name="AppRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton" />

</resources>
